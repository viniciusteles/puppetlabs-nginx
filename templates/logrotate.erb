<%= nx_logdir %>/*.log {
	daily
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
  create 0640 <%= nx_daemon_user %> adm
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi \
	endscript
	postrotate
    <%= logroate_extension %>
    [ ! -f <%= nx_pid  %> ] || kill -USR1 `cat <%= nx_pid %>`
	endscript
}
