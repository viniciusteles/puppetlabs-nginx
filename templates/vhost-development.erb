upstream <%= project_name %>-unicorn {
  # fail_timeout=0 means we always retry an upstream even if it failed
  # to return a good HTTP response (in case the Unicorn master nukes a single worker for timing out).
  server unix:/tmp/<%= project_name %>.socket fail_timeout=0;
}

server {
  listen        <%= listen_port %>; 
  server_name   <%= server_name %>;
  root          <%= www_root %>;
  access_log    off;

  location / {
    try_files                   $uri/index.html $uri.html $uri @<%= project_name %>;
  }

  location @<%= project_name %> {
    include                    conf.d/proxy.conf;
    proxy_pass                 http://<%= project_name %>-unicorn;
  }
}
